<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ajay.datahandle.DataActivity1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="!!! Your Reminder !!!"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:layout_margin="30dp"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/addBtn"
                    android:background="#4DD0E1"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:visibility="visible"
                    android:clickable="true"
                    android:onClick="onAddEvent"
                    android:text="Add Your Special Date"
                    android:focusable="true" />

                <Button
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"
                    android:background="#9575CD"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:id="@+id/updateBtn"
                    android:onClick="onUpdateEvent"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:focusable="true"
                    android:textColor="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:text="Update Your Special Date"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="#81C784"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:focusable="true"
                    android:visibility="visible"
                    android:clickable="true"
                    android:id="@+id/removeBtn"
                    android:textColor="#FFFFFF"
                    android:onClick="onRemoveEvent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Remove Your Special Date"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="#EF5350"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:focusable="true"
                    android:visibility="visible"
                    android:clickable="true"
                    android:textColor="#FFFFFF"
                    android:id="@+id/showAllBtn"
                    android:onClick="onShowAllEvent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="View All Your Special Dates"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"
                    android:background="#7986CB"
                    android:textColor="#FFFFFF"
                    android:focusable="true"
                    android:visibility="visible"
                    android:clickable="true"
                    android:id="@+id/TO_DO_ListBtn"
                    android:onClick="onToDoList"
                    android:text="Add Your TO-DO List"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="10dp"
                    android:background="#1DE9B6"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"
                    android:focusable="true"
                    android:visibility="visible"
                    android:clickable="true"
                    android:textColor="#FFFFFF"
                    android:id="@+id/read_meBtn"
                    android:onClick="onReadMeClick"
                    android:text="Better Know Your App"/>



            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>
