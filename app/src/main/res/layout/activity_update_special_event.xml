<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ajay.datahandle.UpdateSpecialEvent">

    <ScrollView
        android:layout_width="match_parent"
        android:background="#9575CD"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="!!! Update My Event !!!"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:layout_margin="30dp"
                    android:layout_gravity="center_horizontal" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextViewSelectEventUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="20dp"
                    android:ems="10"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="20dp"
                    android:hint="Event Type..."
                    android:textColorHint="#ffffff" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:layout_marginLeft="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:text="Special Day Of : "/>


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:inputType="text"
                        android:textColor="#FFFFFF"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="25dp"
                        android:ems="10"
                        android:textColorHint="#ffffff"
                        android:hint="Name"
                        android:id="@+id/updateSpecialDayOf"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:hint="New modified date..."
                        android:text="Special Day On : "/>


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textColor="#FFFFFF"
                        android:inputType="text"
                        android:hint="New Date"
                        android:textColorHint="#ffffff"
                        android:id="@+id/updateSpecialDayOn"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginLeft="5dp"
                        android:ems="10"/>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    android:text="UPDATE EVENT"
                    android:clickable="true"
                    android:background="#9575CD"
                    android:visibility="visible"
                    android:onClick="onUpdateEventClick"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>






        </LinearLayout>



    </ScrollView>
</LinearLayout>
